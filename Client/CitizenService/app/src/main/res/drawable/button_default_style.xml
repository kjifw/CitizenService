<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#57c15d" />
            <gradient android:angle="-90" android:startColor="#55FF55" android:endColor="#AAAAAA"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#57c15d" />
            <gradient android:angle="-90" android:startColor="#55FF55" android:endColor="#555555" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval" >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#57c15d" />
            <gradient android:angle="-90" android:startColor="#99FF99" android:endColor="#222222" />
        </shape>
    </item>
</selector>