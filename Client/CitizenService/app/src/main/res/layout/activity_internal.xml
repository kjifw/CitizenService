<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultDimensions"
    android:fitsSystemWindows="true"
    tools:context="com.citizen.service.citizenservice.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/internalToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"/>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_below="@+id/internalToolbar"
        style="@style/DefaultDimensions">

        <android.support.v4.view.ViewPager
            android:id="@+id/internalViewPager"
            xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/DefaultDimensions">
        </android.support.v4.view.ViewPager>

        <ListView
            android:id="@+id/leftDrawer"
            style="@style/DrawerStyle"/>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>